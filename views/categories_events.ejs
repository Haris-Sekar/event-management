<head>
    <link rel="stylesheet" href="css/eventCards1.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
        <script src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"></script>

</head>

<%- include('header'); %>
    <style>
        body {
            overflow-x: hidden;

        }
        .noEve{
            text-align: center;
            color: white;
        }
        .main-container {
            padding: 30px;
            overflow-x: hidden;

        }

        /* HEADING */

        .heading {
            text-align: center;
        }

        .heading__title {
            font-weight: 600;
            color: white;
        }

        .heading__credits {
            margin: 10px 0px;
            color: #888888;
            font-size: 25px;
            transition: all 0.5s;
        }

        .heading__link {
            text-decoration: none;
        }

        .heading__credits .heading__link {
            color: inherit;
        }

        /* CARDS1 */

        .cards1 {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            height: fit-content;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .card {
            margin: 20px;
            padding: 20px;
            /* padding-bottom: 50%; */
            width: 500px;
            max-height: fit-content;
            /* display: grid; */
            height:auto;
            /* position: absolute; */
            height: 100%;
            /* overflow: hidden; */

            /* grid-template-rows: 20px 50px 1fr 50px; */
            border-radius: 10px;
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.25);
            transition: all 0.2s;
        }

        .card:hover {
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.4);
            transform: scale(1.01);
        }

        .card__link,
        .card__exit,
        .card__icon {
            /* position: relative; */
            text-align: left;
            text-decoration: none;
            color: rgba(255, 255, 255, 0.9);
        }

        .card__link::after {
            position: absolute;
            top: 25px;
            left: 0;
            content: "";
            width: 0%;
            height: 3px;
            background-color: rgba(255, 255, 255, 0.6);
            transition: all 0.5s;
        }
        .card__apply a:hover {
            text-decoration: none !important;
            color: white !important;
        }

        .card__apply__closed a:hover {
            text-decoration: none !important;
            color: white !important;
            cursor: not-allowed;
        }

        .card__exit {
            grid-row: 1/2;
            justify-self: end;
        }

        .card__icon {
            grid-row: 2/3;
            font-size: 30px;
        }

        .card__title {
            text-align: left;
            grid-row: 3/4;
            font-weight: 400;
            color: #ffffff;
            font-size: 35px;
            line-height: 35px;
            margin-top: 20px;

        }

        .card__apply {
            grid-row: 4/5;
            align-self: center;
            /* border: 2px solid black; */
            width: fit-content;
            margin: auto;
            padding: 10px;
            background-color: #FD7014;
            border-radius: 5px;
            transition: 0.3s transform ease-in;
        }

        .card__apply:hover {
            transform: scale(1.1);
        }

        .card__apply__closed {
            grid-row: 4/5;
            align-self: center;
            /* border: 2px solid black; */
            width: fit-content;
            margin: auto;
            padding: 10px;
            background-color: #8d99ae;
            cursor: not-allowed;
            border-radius: 5px;
            transition: 0.3s transform ease-in;
        }

        /* CARD BACKGROUNDS */

        .card-1 {
            background: radial-gradient(#1fe4f5, #3fbafe);
        }

        .card-2 {
            background: radial-gradient(#fbc1cc, #fa99b2);
        }

        .card-3 {
            cursor: not-allowed;
            background: radial-gradient(#76b2fe, #b69efe);
        }

        .card-4 {
            background: radial-gradient(#60efbc, #58d5c9);
        }

        .card-5 {
            background: radial-gradient(#f588d8, #c0a3e5);
        }

        #tit {
            color: white;
            font-size: 15px;
        }

        #college {
            font-size: 17px;
        }

        /* RESPONSIVE */

        @media (max-width: 1600px) {
            .cards1 {
                justify-content: center;
            }
        }

        #curent {
            color: black;
        }
    </style>
    <% if(eve === "no Events") {%>
        <div class="noEve">
            <lord-icon src="https://cdn.lordicon.com/cvpqeffe.json" trigger="loop" colors="primary:#ffffff,secondary:#5a189a" style="width:250px;height:250px"> </lord-icon>
            <h1>No Events found</h1>
    </div>
    <% } else{%>
<div class="main-container">
    <div class="heading">
        <h1 class="heading__title"><%= categorie%> Events</h1>
    </div>
    <div class="cards1">
        <% for(var i=0;i<EventData.length;i++){ 
            const today=new Date().getTime();
            const eventRegStartDate=EventData[i].regStartDate.getTime(); 
            const eventRegEndDate=EventData[i].regEndDate.getTime(); var type; 
            var reg=0; 
            if(eventRegStartDate>= today && eventRegEndDate>=today) reg = 1;
            else if(eventRegEndDate>=today) reg=1;
            else reg=0;%>
                <div class="card card-1" id="">
                    <span id="tit" style="text-align: left;">
                        <%=type %> Event, <%= EventData[i].categories%>
                    </span>
                    <span id="tit" style="text-align: left;">Event Date: <%=
                            EventData[i].eventStartDate.toLocaleDateString() %> - <%=
                                EventData[i].eventEndDate.toLocaleDateString() %> <br> Registeration Date:
                                <%= EventData[i].regStartDate.toLocaleDateString() %> - <%=
                                        EventData[i].regEndDate.toLocaleDateString() %></span>
                    <span id="tit" style="text-align: left;"></span>

                    <!-- <div class="card__icon"> <i class="fas fa-bolt"><</i></div> -->
                    <h2 class="card__title">
                        <%= EventData[i].eventName%> <br>
                            <span id="college">
                                <%= EventData[i].eventDec%>
                            </span><br>
                            <span id="college">Organized by: <%= EventData[i].collegeName%></span><br>
                            <span id="college">
                                <%= EventData[i].modeOfEvent%> Event
                            </span><br>
                            <span id="college">
                                <%= EventData[i].city%>,<%= EventData[i].state%>
                            </span><br>

                    </h2>
                    <%  var foundValue = arr.filter(obj=>obj.id===EventData[i].id); %>
                                <span style="text-align: left; font-size: 25px;" ><img src="images/user.svg" alt="asdf" style="width: 30px; height: 30px;"> <%= foundValue[0].reg %></span>
                    <% 
                    if(EventData[i].registered==="true"){%>
                        <p class="">
                            <button class="card__apply__closed" disabled>Registered</button>
                        </p>
                    <%} else if(reg===1){%>
                        <button type="button" class="card__apply" data-toggle="modal"
                            data-target="#exampleModal" data-whatever="<%= EventData[i].id%>">
                            Register Now
                        </button>
                        <%} else{%>
                            <p class="">
                                <button class="card__apply__closed" disabled>Registeration Closed </button>
                            </p>
                            <% } %>
                        </div>
                        <%}%>
    </div>
    </div>
    <%}%>
