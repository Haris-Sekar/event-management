        }

        /* HEADING */

        .heading {
            text-align: center;
        }

        .heading__title {
            font-weight: 600;
            color: white;
        }

        .heading__credits {
            margin: 10px 0px;
            color: #888888;
            font-size: 25px;
            transition: all 0.5s;
        }

        .heading__link {
            text-decoration: none;
        }

        .heading__credits .heading__link {
            color: inherit;
        }

        /* CARDS1 */

        .cards1 {
            display: flex;
            flex-wrap: wrap;
            justify-content: flex-start;
            height: fit-content;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .card {
            margin: 20px;
            padding: 20px;
            padding-bottom: 20%;
            width: 500px;
            /* min-height: 200px; */
            display: grid;
            /* grid-template-rows: 20px 50px 1fr 50px; */
            border-radius: 10px;
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.25);
            transition: all 0.2s;
        }

        .card:hover {
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.4);
            transform: scale(1.01);
        }

        .card__link,
        .card__exit,
        .card__icon {
            /* position: relative; */
            text-align: left;
            text-decoration: none;
            color: rgba(255, 255, 255, 0.9);
        }

        .card__link::after {
            position: absolute;
            top: 25px;
            left: 0;
            content: "";
            width: 0%;
            height: 3px;
            background-color: rgba(255, 255, 255, 0.6);
            transition: all 0.5s;
        }

        .card__apply a:hover {
            text-decoration: none !important;
            color: white !important;
        }

        .card__apply__closed a:hover {
            text-decoration: none !important;
            color: white !important;
            cursor: not-allowed;
        }

        .card__exit {
            grid-row: 1/2;
            justify-self: end;
        }

        .card__icon {
            grid-row: 2/3;
            font-size: 30px;
        }

        .card__title {
            text-align: left;
            grid-row: 3/4;
            font-weight: 400;
            color: #ffffff;
            font-size: 35px;
            line-height: 35px;
            margin-top: 20px;

        }

        .card__apply {
            grid-row: 4/5;
            align-self: center;
            /* border: 2px solid black; */
            width: fit-content;
            margin: auto;
            padding: 10px;
            background-color: #FD7014;
            border-radius: 5px;
            transition: 0.3s transform ease-in;
        }

        .card__apply:hover {
            transform: scale(1.1);
        }

        .card__apply__closed {
            grid-row: 4/5;
            align-self: center;
            /* border: 2px solid black; */
            width: fit-content;
            margin: auto;
            padding: 10px;
            background-color: #8d99ae;
            cursor: not-allowed;
            border-radius: 5px;
            transition: 0.3s transform ease-in;
        }

        /* CARD BACKGROUNDS */

        .card-1 {
            background: radial-gradient(#1fe4f5, #3fbafe);
        }

        .card-2 {
            background: radial-gradient(#fbc1cc, #fa99b2);
        }

        .card-3 {
            cursor: not-allowed;
            background: radial-gradient(#76b2fe, #b69efe);
        }

        .card-4 {
            background: radial-gradient(#60efbc, #58d5c9);
        }

        .card-5 {
            background: radial-gradient(#f588d8, #c0a3e5);
        }

        #tit {
            color: white;
            font-size: 15px;
        }

        #college {
            font-size: 17px;
        }

        /* RESPONSIVE */

        @media (max-width: 1600px) {
            .cards1 {
                justify-content: center;
            }
        }

        #curent {
            color: black;
        }
    </style>








